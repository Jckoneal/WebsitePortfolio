---
import '@fontsource-variable/inter';
import '@fontsource/source-sans-pro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "I am a mechanical engineering student that loves to build things."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/JackLogo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-apple-gray-50 text-apple-gray-500">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: #FCB615;
    --accent-dark: #F9A800;
  }
  o
  html {
    font-family: 'SF Pro Display', 'Inter Variable', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    overscroll-behavior: none;
  }
  canvas {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
  }
</style>
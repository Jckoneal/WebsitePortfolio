---
interface Experience {
  title: string;
  company: string;
  period: string;
  description: string[];
  technologies: string[];
}

interface Education {
  degree: string;
  school: string;
  period: string;
  achievements: string[];
}

const experiences: Experience[] = [
  {
    title: "Intern",
    company: "Bimotal Inc",
    period: "2023 - Present",
    description: [
      "Created high-quality product photography, videography, and renders to enhance brand visibility. ",
      "Installed products and performed bike maintenance.",
      "Servicing my own Elevate unit to diagnose issues as a test rider.",
      "Attended engineering standup meetings and design reviews to learn about production ramp issues, and DFMA.","Designed an adapter to use an old photography tripod to stiffen bike rack that was bending because it wasnâ€™t designed for the weight of e-bikes"
    ],
    technologies: ["Social Media", "Renders","Website Design", "Technician", "CAD Design"]
  },
  {
    title: "Founder",
    company: "Jackonealpphoto",
    period: "2021 - 2024",
    description: [
      "Built a photography buisiness from the ground up.",
      "Created a website to showcase my work and attract clients.",
      "Developed a brand for high value sports videography and photography.",
    ],
    technologies: [ "Photography","Adobe Suite", "Website Design", "Client Management", "Social Media"]
  }
];

const education: Education[] = [
  {
    degree: "IT Academy Graduate",
    school: "El Cerrito High School",
    period: "2021 - 2025",
    achievements: [
      "Honors Engineering - Learned OnShape, helped the class with projects, and managed the 3D printers for the class.",
      "AP CS Principles and A - Learned python and Java",
      "AP Calculus BC - Learned calculus and how to apply it to engineering problems.", "IT Academy - 3 Year Academy based on game design"

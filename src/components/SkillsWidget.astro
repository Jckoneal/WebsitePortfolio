---
interface Skill {
  name: string;
  level: 'Expert' | 'Advanced' | 'Intermediate';
  icon: string;
}

const skills: Skill[] = [
  { name: 'OnShape and Fusion 360', level: 'Expert', icon: '🌐' },
  { name: 'KiCad', level: 'Expert', icon: '📟' },
  { name: 'Open Rocket', level: 'Expert', icon: '🚀' },
  { name: 'PCBA, Soldering, and Wiring', level: 'Advanced', icon: '🪛' },
  { name: 'Blender', level: 'Advanced', icon: '🎙️' },
  { name: 'Python, C++, Java', level: 'Advanced', icon: '🖥️' },
  { name: 'JavaScript, Astro, THREE.js, React, Tailwind.css', level: 'Advanced', icon: '⚡' },
];

const levelColors = {
  Expert: 'bg-jackoneal-yellow-100 text-jackoneal-yellow-700',
  Advanced: 'bg-green-100 text-green-700',
  Intermediate: 'bg-yellow-100 text-yellow-700'
};
---

<div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
  <h3 class="text-2xl font-semibold mb-4">Skills</h3>
  <div class="space-y-4">
    {skills.map((skill) => (
      <div class="flex items-center justify-between p-3 hover:bg-apple-gray-50 rounded-xl transition-colors">
        <div class="flex items-center gap-3">
          <span class="text-xl">{skill.icon}</span>
          <span class="font-medium text-apple-gray-500">{skill.name}</span>
        </div>
        <span class={`px-3 py-1 rounded-full text-sm font-medium ${levelColors[skill.level]}`}>
          {skill.level}
        </span>
      </div>
    ))}
  </div>
</div>